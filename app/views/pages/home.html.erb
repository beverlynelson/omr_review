<% if user_signed_in? %>
  <h1>You're logged in!</h1>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to One Month Rails!</h1>
    <p>
      You've found the home page for the
      <%= link_to "One Month Rails Review", "http://www.github.com/beverlynelson/omr_review" %>
      application.
    </p>
    <p>
      <% unless user_signed_in? %>
        <%= link_to "Sign Up Now!", new_user_registration_path, class: "btn btn-large btn-primary" %>
      <% end %>
    </p>
  </div>
<% end %>